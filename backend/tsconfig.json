{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [ "ES2022" ],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true
  }
}
